<% if notice.present? %>
  <p id="notice" class="class: alert alert-info"><%= notice.html_safe %></p>
<% end %>
<% if alert.present? %>
  <p id="alert" class="class: alert alert-danger"><%= alert.html_safe %></p>
<% end %>

<div class="col-md-8 col-md-offset-2">

  <div class="form-group row">
    <div class="col-sm-2">

    </div>
    <div class="col-sm-10">
      <h1 style="margin-bottom: 0px">
        <%= fa_icon 'edit', text: 'ユーザ情報', right: false %>
      </h1>
    </div>
  </div>


  <table class="table">
    <tr>
      <th>名前</th>
      <th>年齢</th>
      <th>性別</th>
    </tr>
    <tr>
      <td><%= @user.name %></td>
      <td><%= @user.age %></td>
      <td><%= @user.get_sex_type %></td>
    </tr>
  </table>
</div>